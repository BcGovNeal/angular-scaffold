{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "s2i-builder",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "runPolicy": "Serial",
        "completionDeadlineSeconds": 1800,
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/bcgov/angular-scaffold"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
                "kind": "ImageStreamTag",
                "name": "angular-builder:latest"
            },
            "runtimeImage": {
              "kind": "ImageStreamTag",
              "name": "nginx-runtime:latest"
            },
            "runtimeArtifacts": [{
              "sourcePath": "/opt/app-root/src/dist",
              "destinationDir": "tmp/src"
            }]
          }


        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "resources": {
          "requests": {
            "cpu": "100m",
            "memory": "256Mi"
          },
          "limits": {
            "cpu": "1",
            "memory": "1Gi"
          }
        }
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the frontend objects defined in this template.",
      "required": true,
      "value": "myappname"
    }
  ]
}
